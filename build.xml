<project default="minimize jquery-timing">

	<property name="js-compressor" value="yuicompressor-2.4.7.jar" />
	
	<target name="minimize jquery-timing">
		<property name="src" value="jquery-timing.js" />
		<property name="dest" value="jquery-timing.min.js" />
		
		<java jar="${js-compressor}" fork="true">
			<arg value="${src}"/>
			<arg value="-o"/><arg value="${dest}"/>
			<arg value="--charset"/><arg value="utf-8"/>
			<arg value="-v"/>
		</java>
		
		<replace file="${dest}" token="_action" value="a"/>
		<replace file="${dest}" token="_activeExecutionPoint" value="b"/>
		<replace file="${dest}" token="_callback" value="c"/>
		<replace file="${dest}" token="_context" value="d"/>
		<replace file="${dest}" token="_count" value="e"/>
		<replace file="${dest}" token="_isChainEnd" value="f"/>
		<replace file="${dest}" token="_isInterrupted" value="g"/>
		<replace file="${dest}" token="_isTriggered" value="h"/>
		<replace file="${dest}" token="_methodArguments" value="i"/>
		<replace file="${dest}" token="_methodName" value="j"/>
		<replace file="${dest}" token="_next" value="k"/>
		<replace file="${dest}" token="_ongoingLoops" value="l"/>
		<replace file="${dest}" token="_openEndLoopTimeout" value="m"/>
		<replace file="${dest}" token="_trigger" value="n"/>
		<replace file="${dest}" token="_type" value="o"/>
		<replace file="${dest}" token="_value" value="p"/>
		<replace file="${dest}" token="&quot;_event_&quot;" value="1"/>
		<replace file="${dest}" token="&quot;_interval_&quot;" value="2"/>
		<replace file="${dest}" token="&quot;_timeout_&quot;" value="3"/>
		
	</target>
	
</project>